<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Paltica" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/palta_dark</item>
        <item name="colorPrimaryVariant">@color/palta_light</item>
        <item name="colorOnPrimary">@color/palta_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/palta_brown</item>
        <item name="colorSecondaryVariant">@color/palta_brown_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">?attr/colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="toolbarStyle">@style/my_Toolbar</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="my_Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>

<style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/palta_brown</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>